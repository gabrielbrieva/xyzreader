<resources>

    <!-- App theme -->

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>

    <!-- List text styles -->

    <style name="ItemTitle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:maxLines">4</item>
    </style>

    <style name="ItemSubtitle" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Detail text styles -->

    <style name="DetailText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginLeft">@dimen/detail_body_text_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/detail_body_text_horizontal_margin</item>
        <item name="android:maxWidth">@dimen/detail_card_max_width</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">88dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorLink">@color/theme_accent</item>
        <item name="android:textSize">@dimen/detail_body_text_size</item>
        <item name="android:lineSpacingMultiplier">@fraction/detail_body_line_spacing_multiplier</item>
    </style>

    <style name="DetailTitle" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/detail_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/detail_title_text_size</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
    </style>

    <style name="DetailSubtitle" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/detail_subtitle</item>
    </style>

</resources>
